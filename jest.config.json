{
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["jest-extended"],
    "testRegex": "test/tests-.+\\.ts",
    "testPathIgnorePatterns": ["/.+tests-.+\\.d\\.ts"],
    "transform": {
        "^.+\\.(ts|tsx)$": ["ts-jest", {
            "diagnostics": false
        }]
    },
    "extensionsToTreatAsEsm": [".ts", ".tsx"],
    "rootDir": "./",
    "forceExit": true,
    "silent": true,
    "testTimeout": 3000000
}
