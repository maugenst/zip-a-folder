{
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["jest-extended/all"],
    "transform": {
        "^.+\\.(ts|tsx)$": ["@swc/jest"]
    },
    "extensionsToTreatAsEsm": [".ts", ".tsx"],
    "testRegex": "test/tests-.+\\.ts",
    "testPathIgnorePatterns": ["/.+tests-.+\\.d\\.ts"],
    "forceExit": true,
    "silent": true,
    "bail": true,
    "testTimeout": 3000000,
    "rootDir": "./"
}
